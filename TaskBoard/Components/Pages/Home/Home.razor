@page "/"
@using MudBlazor
@inherits LayoutComponentBase

<PageTitle>Kanban Taskboard</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="home-container">
    <MudGrid Spacing="3">
        <MudItem xs="12" sm="6" md="4">
            <MudCard Class="stat-card">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Offene Aufgaben</MudText>
                    <MudText Typo="Typo.body1" Class="stat-value">12</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudCard Class="stat-card">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Abgeschlossene Aufgaben</MudText>
                    <MudText Typo="Typo.body1" Class="stat-value">35</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudCard Class="stat-card">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Verzögerungen</MudText>
                    <MudText Typo="Typo.body1" Class="stat-value">5</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>